<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainBrain">

    <TextView
        android:text="185+245+190="
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/equation" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:textSize="20dp"
        android:id="@+id/scores" />

    <TextView
        android:id="@+id/digital_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />








    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="7dip">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_ans3"
            android:onClick="responseTest"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:cb_color="@color/colorPrimary"
            app:cb_pressedRingWidth="8dip"
            />

        <TextView
            android:id="@+id/txt_ans3"
            android:gravity="center"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:text="111"
            android:textSize="18dip"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </FrameLayout>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="7dip">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_ans2"
            android:onClick="responseTest"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:cb_color="@color/colorPrimary"
            app:cb_pressedRingWidth="8dip"
            />

        <TextView
            android:id="@+id/txt_ans2"
            android:gravity="center"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:text="222"
            android:textSize="18dip"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dip">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_ans1"
            android:onClick="responseTest"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:cb_color="@color/colorPrimary"
            app:cb_pressedRingWidth="8dip"
            />

        <TextView
            android:id="@+id/txt_ans1"
            android:gravity="center"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:text="333"
            android:textSize="18dip"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </FrameLayout>


</RelativeLayout>